<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/prefs_audio_playback">

        <CheckBoxPreference
            app:key="audio_focus"
            app:defaultValue="true"
            app:title="@string/prefs_audio_playback_audio_focus"
            app:summary="@string/prefs_audio_playback_audio_focus_s" />
        <CheckBoxPreference
            app:key="stop_on_exit"
            app:defaultValue="true"
            app:title="@string/prefs_audio_playback_stop_on_exit"
            app:summary="@string/prefs_audio_playback_stop_on_exit_s" />
        <EditTextPreference
            app:key="time_get_duration"
            app:defaultValue="1000"
            app:title="@string/prefs_audio_playback_time_get_duration" />
    </PreferenceCategory>
    <PreferenceCategory
        app:title="@string/prefs_audio_provider">

        <CheckBoxPreference
            app:key="metadata"
            app:defaultValue="true"
            app:title="@string/prefs_audio_provider_metadata_fetching"
            app:summary="@string/prefs_audio_provider_metadata_fetching_s" />
    </PreferenceCategory>
    <PreferenceCategory
        app:title="@string/prefs_audio_persistence">

        <SwitchPreferenceCompat
            app:key="non_persistent_playback"
            app:defaultValue="true"
            app:title="@string/prefs_audio_persistence_non_persistent_playback"
            app:summaryOff="@string/prefs_audio_persistence_non_persistent_playback_s_off"
            app:summaryOn="@string/prefs_audio_persistence_non_persistent_playback_s_on" />
        <Preference
            app:key="clean_persistence"
            app:title="@string/prefs_audio_persistence_clean" />
    </PreferenceCategory>
</PreferenceScreen>