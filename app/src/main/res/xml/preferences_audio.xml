<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/prefs_audio_playback">

        <CheckBoxPreference
            app:key="background_playback"
            app:defaultValue="true"
            app:title="@string/prefs_audio_playback_background"
            app:summary="@string/prefs_audio_playback_background_s" />
        <EditTextPreference
            app:key="time_get_duration"
            app:defaultValue="1000"
            app:title="@string/prefs_audio_playback_time_get_duration" />
    </PreferenceCategory>
</PreferenceScreen>