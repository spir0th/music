<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/prefs_appearance_app">

        <SwitchPreferenceCompat
            app:key="dynamic_colors"
            app:defaultValue="true"
            app:title="@string/prefs_appearance_app_dynamic_colors"
            app:summary="@string/prefs_appearance_app_dynamic_colors_s" />
    </PreferenceCategory>
    <PreferenceCategory
        app:title="@string/prefs_appearance_player">

        <CheckBoxPreference
            app:key="dynamic_player_controls"
            app:defaultValue="true"
            app:title="@string/prefs_appearance_player_dynamic_controls"
            app:summary="@string/prefs_appearance_player_dynamic_controls_s" />
        <CheckBoxPreference
            app:key="immersive_on_landscape"
            app:defaultValue="true"
            app:disableDependentsState="true"
            app:title="@string/prefs_appearance_player_immersive_on_landscape"
            app:summary="@string/prefs_appearance_player_immersive_on_landscape_s" />
    </PreferenceCategory>
    <PreferenceCategory
        app:title="@string/prefs_appearance_other">

        <SwitchPreferenceCompat
            app:key="immersive"
            app:dependency="immersive_on_landscape"
            app:title="@string/prefs_appearance_other_immersive" />
    </PreferenceCategory>
</PreferenceScreen>